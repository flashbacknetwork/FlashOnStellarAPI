{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "commonjs",
	  "declaration": true,
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "types": ["jest", "node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }