{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests (ts-node-dev)",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "args": [
        "--inspect",
        "--respawn",
        "node_modules/jest/bin/jest.js",
        "--runInBand",
        "--watchAll",
        "${file}"
      ],
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal"
    }
  ]
}
